@model CategoryDTO
@{
    var categories = (List<CategoryDTO>)ViewBag.Categories;
}

<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Add Article</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Add Article</h6>
            </div>
            <div class="card-body">
                @Html.Raw(ViewData["message"])
                <form method="post" action="/Article/Create">
                    <div class="form-group mt-3 mb-3">
                        <label for="Title">CategoryID :</label>
                        <select name="CategoryID" class="form-control form-select" aria-label="Default select example">
                            <option selected>Open this select menu</option>
                            @foreach (var categoryOption in categories)
                            {
                                <option value="@categoryOption.CategoryID">@categoryOption.CategoryName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group mt-3 mb-3">
                        <label for="Title">Title :</label>
                        <input type="text" class="form-control" name="Title"
                               placeholder="Insert title" />
                    </div>
                    <div class="form-group mt-3 mb-3">
                        <label for="Details">Content :</label>
                        <input type="text" class="form-control" name="Details"
                               placeholder="Insert content" />
                    </div>
                    <div class="form-group mt-3 mb-3">
                        <label for="IsApproved">Approve :</label>
                        <input type="checkbox" id="IsApproved" name="IsApproved" value="true" />
                    </div>
                    @* <div class="form-group mt-3 mb-3">
                        <label for="IsApproved">Upload Picture :</label>
                        <input type="checkbox" id="IsApproved" name="IsApproved" value="true" />
                    </div> *@
                    

                    <input type="Submit" value="Create" class="btn btn-success btn-sm" />
                </form>
            </div>
        </div>

    </div>

</div>
